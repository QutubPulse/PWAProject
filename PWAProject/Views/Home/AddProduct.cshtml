@model PWAProject.Models.Product;
@{
    ViewData["Title"] = "Manage Product";
}
<div class="row">
    <div class="col-4">
        <div class="p-3 mb-1 bg-primary text-white text-center">Add Product Details</div>
        <form method="post" id="frmProduct" enctype="multipart/form-data" asp-controller="Home" asp-action="SaveProduct">
            <input hidden asp-for="inProductId" />
            <div class="form-group">
                <label for="name">Product Name</label>
                <input type="text" id="name" class="form-control" asp-for="stProductName" />
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input type="text" id="price" class="form-control" asp-for="dcPrice" />
            </div>
            <div class="form-group">
                <label for="quantity">Quantity</label>
                <input type="text" id="quantity" class="form-control" asp-for="inQuantity" />
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <input type="text" id="Description" class="form-control" asp-for="stDescription" />
            </div>
            <div class="text-center p-3 mb-3">
                <button class="btn btn-info" onclick="SaveProduct();"> Save </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/Product/Product.js" asp-append-version="true"></script>

}